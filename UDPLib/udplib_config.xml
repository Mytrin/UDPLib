<?xml version="1.0" encoding="UTF-8"?>
<!--
Default UDPLib config file.
-->
<root>
    <!-- IP in network interface, which should be used by server -->
    <!-- Zeros mean all interfaces -->
    <item name="default-server-ip" >0.0.0.0</item>
    <item name="default-port">52511</item>
    <item name="default-group">225.226.227.228</item>
    <!-- Time between server requests for response from other users (ms) -->
    <item name="user-info-period">5000</item>
    <!-- Time, which will server wait after sending request, before it announces user as dead (ms) -->
    <item name="dead-time">2000</item>
    <!-- Time waited between sending file parts (ms) -->
    <item name="file-time">5</item>
    <!-- Size of datagram header with binary file parts, enlarge in case you want to share large files. MUST BE DIVIDEABLE BY 16-->
    <item name="binary-file-header-size">32</item>
</root>
